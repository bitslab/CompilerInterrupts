# This Makefile requires GNU make.

HOME = ../..

include $(HOME)/Defines.mk

LIBS += -L$(HOME)/$(LIB_DIR) -l$(PHOENIX)

KMEANS_OBJS = kmeans.o
KMEANS_SEQ_OBJS = kmeans-seq.o
KMEANS_PTHREAD_OBJS = kmeans-pthread.o

OS ?= $(shell uname -s)

ARCH1 ?= $(shell uname -m)
ifeq ($(ARCH1),i386)
ARCH1=x86
endif
ifeq ($(ARCH1),i86pc)
ARCH1=x86
endif
ifeq ($(ARCH1),i686)
ARCH1=x86
endif

ifeq ($(ARCH1),x86_64)
CFLAGS += -m64 -DARCH_x86_64
endif
ifeq ($(ARCH1),x86)
CFLAGS += -m32 -march=i686 -DARCH_x86
endif

SRC_FILES := $(wildcard *.c)
INTERMEDIATE_FILES := $(patsubst %.c, llvm_%.ll, $(SRC_FILES))

PROGS = kmeans kmeans-seq kmeans-pthread
PROGS = kmeans

.PHONY: default all clean

default: all

all: $(PROGS)

kmeans: $(KMEANS_OBJS) $(LIB_DEP)
	$(CC) $(CFLAGS) -o $@ $(KMEANS_OBJS) $(LIBS)

$(KMEANS_OBJS): opt_kmeans.ll
	$(LLVM_BUILD)/bin/llc -relocation-model=pic -filetype=obj -o $@ $<

opt_kmeans.ll: llvm_kmeans.ll
	opt-9 $(OPT_FLAGS) -S < $< > $@


kmeans-seq: $(KMEANS_SEQ_OBJS)
	$(CC) $(CFLAGS) -o $@ $(KMEANS_SEQ_OBJS) $(LIBS)

$(KMEANS_SEQ_OBJS): opt_kmeans-seq.ll
	$(LLVM_BUILD)/bin/llc -relocation-model=pic -filetype=obj -o $@ $<

opt_kmeans-seq.ll: llvm_kmeans-seq.ll
	opt-9 $(OPT_FLAGS) -S < $< > $@


kmeans-pthread: $(KMEANS_PTHREAD_OBJS)
	$(CC) $(CFLAGS) -o $@ $(KMEANS_PTHREAD_OBJS) $(LIBS)

$(KMEANS_PTHREAD_OBJS): opt_kmeans-pthread.ll
	$(LLVM_BUILD)/bin/llc -relocation-model=pic -filetype=obj -o $@ $<

opt_kmeans-pthread.ll: llvm_kmeans-pthread.ll
	opt-9 $(OPT_FLAGS) -S < $< > $@


$(INTERMEDIATE_FILES): llvm_%.ll : %.c
	clang-9 -S -emit-llvm $(CFLAGS) -I$(HOME)/$(INC_DIR) -o $@ $<

	
clean:
	rm -f $(PROGS) $(KMEANS_OBJS) $(KMEANS_SEQ_OBJS) $(KMEANS_PTHREAD_OBJS) $(INTERMEDIATE_FILES) *.ll
